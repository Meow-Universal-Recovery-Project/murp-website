---
import Layout from '../layouts/Layout.astro';
import coloredMurp from '../assets/murp-colored.svg';
import { Image } from 'astro:assets';
---

<Layout>
    <div slot="hero" class="container mx-auto flex flex-1 items-center">
        <div class="flex flex-col">
            <p
                class="text-primary-500 text-md mb-4 font-semibold tracking-wider uppercase"
            >
                fork of OrangeFox
            </p>
            <h1
                class="bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-7xl leading-tight font-bold text-transparent dark:from-gray-200 dark:to-gray-400"
            >
                Meow Universal<br />Recovery Project
            </h1>
            <a
                href="#"
                class="bg-primary-400 hover:bg-primary-500 mt-12 w-fit rounded-4xl px-7 py-4 text-lg transition-colors hover:text-gray-200"
            >
                Download
            </a>
        </div>
        <div class="flex flex-1 items-center justify-center">
            <Image
                src={coloredMurp}
                alt="Meow Universal Recovery Project"
                class="w-80"
            />
        </div>
    </div></Layout
>
