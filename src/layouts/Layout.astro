---
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

const hasHero = Astro.slots.has('hero');
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/png"
            href="/favicon-96x96.png"
            sizes="96x96"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <meta name="apple-mobile-web-app-title" content="MURP" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
        <title>Meow Universal Recovery Project</title>
    </head>
    <body
        class={`border-primary-500 dark:border-primary-400 m-0 min-h-screen w-full border-t-4 flex flex-col bg-gray-100 font-sans antialiased dark:bg-gray-900 ${hasHero && 'min-h-dvh'}`}
    >
        <Navbar />
        <slot name="hero" />
        <slot />
    </body>
</html>
